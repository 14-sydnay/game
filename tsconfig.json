{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/types/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "Images/*": ["src/assets/images/*"],
      "Components/*": ["src/components/*"],
      "Assets/*": ["src/assets/*"],
      "Pages/*": ["src/pages/*"],
      "Modules/*": ["src/modules/*"],
      "Api/*": ["src/api/*"],
      "Services/*": ["src/services/*"],
      "Hooks/*": ["src/hooks/*"],
      "Utils/*": ["src/utils/*"]
    },
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true ,
    "noImplicitReturns": true
  }
}
