{
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "types/**/*.d.ts",
    "./src/models/**/*.d.ts",
    "./node_modules/@types"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "paths": {
      "images/*": ["src/assets/images/*"],
      "components/*": ["src/components/*"],
      "assets/*": ["src/assets/*"],
      "pages/*": ["src/pages/*"],
      "modules/*": ["src/modules/*"],
      "models/*": ["src/models/*"],
      "api/*": ["src/api/*"],
      "services/*": ["src/services/*"],
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"]
    },
    "sourceMap": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true ,
    "noImplicitReturns": true
  }
}
